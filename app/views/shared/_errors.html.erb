<% if resource.errors.present? %>
<div>
  <h3><%= pluralize(resource.errors.count, 'error') %> detected:</h3>
  <h3><%= t('.header', count: resource.error.count) %> </h3>

  <ul>
    <% resource.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
    <% end %>
  </ul>
</div>
<% end %>
