<header class="navbar bd-navbar text-light h6">
  
  <div>
  <%= link_to "TestGuru", root_path , class: "navbar-brand"%>

  <% if user_signed_in?  %>
    <% if current_user.admin? %>
      <%= link_to "AdminPanel", admin_tests_path, class: "btn btn-outline-warning"%>
      </div> 
    <% end %>

    <div>
      <%= t('.welcome', name: current_user.first_name)%>   
      <%= link_to t('.log_out'), destroy_user_session_path, method: :delete, class: "btn btn-outline-primary" %>
    </div>  
  <%else%>
    </div>
    <div>
      <%= link_to t('.sign_up'), new_user_registration_path, class: "btn btn-outline-primary" %> 
      <%= link_to t('.log_in'), new_user_session_path, class: "btn btn-outline-primary" %>
    </div>
  <% end %>

</header>

