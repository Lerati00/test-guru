
<h1> <%= t('.header') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label t('.first_name') %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label t('.last_name') %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label t('.password')%>
    <% if @minimum_password_length %>
    <em> <%= t('.minimum_password_length', number: @minimum_password_length)%></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field password_confiramation_field">
    <%= f.label t('.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control pointer" %>
  </div>
  <p>
  <div class="actions">
    <%= f.submit t('.sign_up'), class: "btn btn-success" %>
  </div></p>
<% end %>

<%= render "devise/shared/links" %>

