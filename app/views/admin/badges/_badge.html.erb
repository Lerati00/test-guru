<tr>
  <td> <%= badge.title %> </td>
  <td> <%= badge.description %> </td>
  <td> <%= badge.image_url %> </td>
  <td> <%= link_to t('admin.control_link.show'), admin_badge_path(badge), class: "btn btn-success"%> </td>
  <td> 
    <%= link_to t('admin.control_link.edit'), 
                edit_admin_badge_path(badge),
                class: "btn btn-warning" %> 
  </td>
  <td> 
    <%= link_to t('admin.control_link.delete'), 
                admin_badge_path(badge), 
                method: :delete,
                class: "btn btn-danger",
                data: {confirm: t('.confirm') } %> 
  </td>
</tr>