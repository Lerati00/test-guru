<p>
  <strong> <%= t('.title') %> </strong>
  <%= @test.title %>
</p>

<p>
  <strong> <%= t('.level') %> </strong>
  <%= test_level(@test) %>
</p>

<p>
  <table>
    <tr>
      <th> <%= t('.header', test: @test.title) %> </th>
      <th colspan='3'> <%= t('.actions') %> </th>
    </tr>
    <%= render @test.questions %>
    <tr>
      <td colspan='4'> <%= link_to t('.create_question'), new_admin_test_question_path(@test, @question) %> </td>
    </tr>
  </table>
</p>

<p>
<%= link_to t('admin.control_link.back'), admin_tests_path %> |
<td> <%= link_to t('admin.control_link.edit'), edit_admin_test_path(@test) %> </td> 
</p>

