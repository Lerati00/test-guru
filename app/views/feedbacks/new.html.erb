<h1> <%= t('.header')%> </h1>

<%= form_with model: @feedback, local: true do |form| %>
    <div class="form-group">
      <%= render 'shared/errors', resource: @feedback %>

    <p>
      <%= form.label :title %>
      <%= form.text_field :title, id: :feedback_title, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :body %>
      <%= form.text_area :body, id: :feedback_body, class: 'form-control' %>
    </p>

    <p><%= form.submit t('.send'),class: 'btn btn-success' %></p>
<% end %>